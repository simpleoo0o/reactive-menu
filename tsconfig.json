{
  "extends": "@tsconfig/node18/tsconfig.json",
  "compilerOptions": {
    "composite": true,
    "baseUrl": ".",
    "types": [
      "vite/client",
      "node"
    ],
    "module": "esnext",
    "target": "esnext",
    "declaration": true,
    "outDir": "./types",
    "moduleResolution": "node",
    "esModuleInterop": true,
    "strict": true,
    "skipLibCheck": true,
    "noUnusedLocals": true,
    "resolveJsonModule": true,
    "jsx": "preserve",
    "lib": ["esnext", "DOM"],
    "allowImportingTsExtensions": true,
    "allowSyntheticDefaultImports": true,
    "noLib": false,
    "forceConsistentCasingInFileNames": true,
    "strictFunctionTypes": false,
    "allowJs": true,
    "sourceMap": true,
    "noUnusedParameters": true,
    "experimentalDecorators": true,
    "noImplicitAny": false,
    "removeComments": true,
    "paths": {
      "@/*": [
        "src/*"
      ],
      "#/*": [
        "types/*"
      ]
    }
  },
  "include": [
    "src/useReactiveMenu.ts",
    "src/MenuContent.vue",
    "src/ReactiveMenuItem.vue",
    "src/ReactiveMenuTree.vue",
    "src/reactive-menu.ts"
  ],
  "exclude": [
    "node_modules",
    "dist",
    "**/*.js"
  ]
}
